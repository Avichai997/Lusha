{
  "ignore": [".git", "node_modules", "dist", "lib", "build"],
  "verbose": false,
  "watch": ["src", "tsconfig.json", "nodemon.json", ".env", ".env.dev", ".env.prod"],
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "execArgs": ["--inspect=0.0.0.0:9234", "--nolazy"],
  "ext": "js,json,ts,yaml,yml",
  "signal": "SIGINT",
  "quiet": true,
  "events": {
    "restart": "clear"
  }
}
