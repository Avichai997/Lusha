{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "resolveJsonModule": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
